# ===== Futu / moomoo OpenAPI 配置（示例） =====
MOOMOO_HOST=127.0.0.1
MOOMOO_PORT=11111

# 交易环境：SIM / REAL
MOOMOO_ENV=SIM

# 账户ID（在 moomoo/Futu 客户端或API账户信息里查看）
MOOMOO_ACCOUNT_ID=

# 交易解锁密码（不是登录密码）
MOOMOO_TRADE_PWD=

# 标的与下单参数
TRADE_MARKET=US
TRADE_SYMBOL=SPY
DCA_AMOUNT_USD=1000
ORDER_TYPE=MARKET
ALLOW_EXTENDED_HOURS=false

# 你的规则
RULE_DAILY_DROP_PCT=-1.0
RULE_MONTH_DROP_PCT=-5.0
THIRD_WEEKDAY=5

# 风控
REQUIRE_CONFIRM=true
MAX_ORDERS_PER_DAY=2
MAX_ORDERS_PER_MONTH=2
